<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#90F693"
    tools:context=".LinksActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important Links"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/buttonUnicef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="33dp"
        android:background="#06A1E8"
        android:text="UNICEF Environment and Climate Change"
        android:textColor="#FFFFFF" />

    <Button
android:id="@+id/buttonUN"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/buttonUnicef"
android:layout_marginTop="16dp"
android:text="UN Net-Zero Coalition"
android:background="#06A1E8"
android:textColor="#FFFFFF"
    />

<Button
android:id="@+id/buttonCambridge"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/buttonUN"
android:layout_marginTop="16dp"
android:text="Cambridge Carbon Footprint"
android:background="#06A1E8"
android:textColor="#FFFFFF"
    />

<Button
android:id="@+id/buttonImperial"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/buttonCambridge"
android:layout_marginTop="16dp"
android:text="What you can do to make a difference!"
android:background="#06A1E8"
android:textColor="#FFFFFF"
    />

    </RelativeLayout>
